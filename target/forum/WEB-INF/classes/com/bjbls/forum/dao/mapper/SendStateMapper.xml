<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 指明这个映射文件adminMapper.xml的逻辑路径,如果与接口建立映射，那么逻辑路径应该与接口的物理路径一致-->
<mapper namespace="com.bjbls.forum.dao.Send_StateDao">
    <!-- parameterType表示要传入的参数的类型 ，resultType表示要返回的数据的类型-->

    <select id="get"  resultType="SendState">
        select * from send_state where id=#{id}
    </select>

    <!-- 读取所有的账号 -->
    <select id="readAll" resultType="SendState">
        select * from send_state order by id asc
    </select>
</mapper>